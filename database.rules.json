{
  "rules": {
    "stats": {
      ".read": "auth != null && auth.isAdmin == true",
      ".write": false
    },
    "banner": {
      ".read": true,
      ".write": false
    },
    "carts": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }
  }
}